{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "InvestingTradeTicketDraft",
  "type": "object",
  "required": ["ticket_id", "created_at", "symbol", "side", "order_type", "strategy_version", "status"],
  "properties": {
    "ticket_id": { "type": "string" },
    "created_at": { "type": "string" },
    "symbol": { "type": "string" },
    "side": { "type": "string", "enum": ["buy", "sell"] },
    "order_type": { "type": "string", "enum": ["market", "limit", "stop", "stop_limit"] },
    "qty": { "type": "number" },
    "notional": { "type": "number" },
    "entry_rule_reference": { "type": "string" },
    "exit_rule_reference": { "type": "string" },
    "stop_loss": { "type": "number" },
    "take_profit": { "type": "number" },
    "time_in_force": { "type": "string" },
    "risk_notes": { "type": "string" },
    "sizing_rationale": { "type": "string" },
    "strategy_version": { "type": "string" },
    "status": { "type": "string", "enum": ["draft", "approved", "placed", "canceled"] }
  }
}