{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AuditEvent",
  "type": "object",
  "required": ["event_id", "timestamp", "correlation_id", "component", "action_type", "risk_level", "policy_decision"],
  "properties": {
    "event_id": { "type": "string" },
    "timestamp": { "type": "string" },
    "correlation_id": { "type": "string" },
    "component": { "type": "string" },
    "action_type": { "type": "string" },
    "risk_level": { "type": "string", "enum": ["low", "medium", "high"] },
    "inputs_summary": { "type": "string" },
    "outputs_summary": { "type": "string" },
    "policy_decision": { "type": "string", "enum": ["allow", "deny", "confirm_required"] },
    "rationale": { "type": "string" }
  }
}
