{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FinanceLedgerEntry",
  "type": "object",
  "required": ["entry_id", "date", "amount", "currency", "account_id", "source", "import_batch_id"],
  "properties": {
    "entry_id": { "type": "string" },
    "date": { "type": "string" },
    "amount": { "type": "number" },
    "currency": { "type": "string" },
    "account_id": { "type": "string" },
    "merchant": { "type": "string" },
    "category": { "type": "string" },
    "category_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "memo": { "type": "string" },
    "source": { "type": "string", "enum": ["bank_export", "manual"] },
    "import_batch_id": { "type": "string" }
  }
}
